---
// Dashboard principal del CRM con diseño moderno y estadísticas
import Layout from '../layouts/Layout.astro';
import { isAuthenticated, getUserProfile } from '../lib/services/authService';
import { getClients } from '../lib/services/clientsService';
import { getProducts } from '../lib/services/productsService';
import { getLicenses } from '../lib/services/licensesService';

// Verificar autenticación
const token = Astro.cookies.get('sb-access-token')?.value;
const authenticated = await isAuthenticated(token);

if (!authenticated) {
  return Astro.redirect('/login');
}

// Obtener perfil del usuario
const userProfile = await getUserProfile(token);

// Obtener estadísticas - IMPORTANTE: pasar el token para autenticar las consultas
const clientsResponse = await getClients(token);
const totalClients = clientsResponse.success && clientsResponse.data ? clientsResponse.data.length : 0;

const productsResponse = await getProducts(token);
const totalProducts = productsResponse.success && productsResponse.data ? productsResponse.data.length : 0;

const licensesResponse = await getLicenses(token);
const allLicenses = licensesResponse.success && licensesResponse.data ? licensesResponse.data : [];
const activeLicenses = allLicenses.filter((l: any) => l.status === 'activa').length;
const pendingLicenses = allLicenses.filter((l: any) => l.status === 'pendiente_pago').length;

// Licencias recientes (ordenadas por fecha de creación)
const recentLicenses = allLicenses.slice(0, 5);

// Obtener fecha actual formateada
const now = new Date();
const dateOptions: Intl.DateTimeFormatOptions = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
const formattedDate = now.toLocaleDateString('es-ES', dateOptions);
---

<Layout title="Dashboard - SoftControl CRM">
  <div class="dashboard-container">
    <!-- Header del dashboard con animación de entrada -->
    <header class="dashboard-header animate-in">
      <div class="header-welcome">
        <div class="welcome-text">
          <h1>¡Hola, {userProfile?.full_name?.split(' ')[0] || 'Usuario'}!</h1>
          <p class="date-text">{formattedDate}</p>
        </div>
        <div class="user-role-badge" data-role={userProfile?.role}>
          <span class="role-dot"></span>
          <span>{userProfile?.role === 'admin' ? 'Administrador' : 'Staff'}</span>
        </div>
      </div>
      <div class="header-actions">
        <a href="/clientes/nuevo" class="btn-new-client">
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
          </svg>
          <span>Nuevo Cliente</span>
        </a>
      </div>
    </header>

    <!-- Tarjetas de estadísticas con animaciones escalonadas -->
    <section class="stats-grid">
      <!-- Total Clientes -->
      <div class="stat-card stat-blue animate-in animate-delay-1">
        <div class="stat-icon">
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
        </div>
        <div class="stat-content">
          <span class="stat-label">Total Clientes</span>
          <span class="stat-value">{totalClients}</span>
          <div class="stat-trend up">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
            </svg>
            <span>Activos</span>
          </div>
        </div>
        <a href="/clientes" class="stat-link" aria-label="Ver clientes">
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
        <div class="stat-decoration"></div>
      </div>

      <!-- Total Productos -->
      <div class="stat-card stat-emerald animate-in animate-delay-2">
        <div class="stat-icon">
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
          </svg>
        </div>
        <div class="stat-content">
          <span class="stat-label">Total Productos</span>
          <span class="stat-value">{totalProducts}</span>
          <div class="stat-trend neutral">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4" />
            </svg>
            <span>En catálogo</span>
          </div>
        </div>
        <a href="/productos" class="stat-link" aria-label="Ver productos">
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
        <div class="stat-decoration"></div>
      </div>

      <!-- Licencias Activas -->
      <div class="stat-card stat-violet animate-in animate-delay-3">
        <div class="stat-icon">
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
          </svg>
        </div>
        <div class="stat-content">
          <span class="stat-label">Licencias Activas</span>
          <span class="stat-value">{activeLicenses}</span>
          <div class="stat-trend up">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>Vigentes</span>
          </div>
        </div>
        <a href="/licencias" class="stat-link" aria-label="Ver licencias">
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
        <div class="stat-decoration"></div>
      </div>

      <!-- Pagos Pendientes -->
      <div class="stat-card stat-amber animate-in animate-delay-4">
        <div class="stat-icon">
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div class="stat-content">
          <span class="stat-label">Pagos Pendientes</span>
          <span class="stat-value">{pendingLicenses}</span>
          <div class="stat-trend {pendingLicenses > 0 ? 'warning' : 'neutral'}">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>{pendingLicenses > 0 ? 'Requiere atención' : 'Todo al día'}</span>
          </div>
        </div>
        <a href="/licencias" class="stat-link" aria-label="Ver pendientes">
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
        <div class="stat-decoration"></div>
      </div>
    </section>

    <!-- Contenido principal: Panel de licencias recientes (ancho completo) -->
    <section class="main-section animate-in animate-delay-5">
      <div class="panel licenses-panel">
        <div class="panel-header">
          <div class="panel-title">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
            </svg>
            <h2>Licencias Recientes</h2>
          </div>
          <a href="/licencias" class="panel-action">Ver todas</a>
        </div>
        
        <div class="panel-content">
          {recentLicenses.length > 0 ? (
            <div class="license-list">
              {recentLicenses.map((license, index) => (
                <div class="license-item" style={`-webkit-animation-delay: ${index * 0.1}s; animation-delay: ${index * 0.1}s`}>
                  <div class="license-avatar">
                    <span>{license.client?.name?.charAt(0) || 'C'}</span>
                  </div>
                  <div class="license-info">
                    <span class="license-client">{license.client?.name || 'Cliente'}</span>
                    <span class="license-product">{license.product?.name || 'Producto'}</span>
                  </div>
                  <div class={`license-status status-${license.status === 'activa' ? 'active' : license.status === 'pendiente_pago' ? 'pending' : 'inactive'}`}>
                    <span class="status-dot"></span>
                    <span>{license.status === 'activa' ? 'Activa' : license.status === 'pendiente_pago' ? 'Pendiente' : 'Inactiva'}</span>
                  </div>
                </div>
              ))}
            </div>
          ) : (
            <div class="empty-state">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
              </svg>
              <p>No hay licencias registradas</p>
              <a href="/licencias/nuevo" class="empty-action">Crear primera licencia</a>
            </div>
          )}
        </div>
      </div>
    </section>
  </div>
</Layout>

