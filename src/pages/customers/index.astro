---
import Layout from '../../layouts/Layout.astro';

// Verificar autenticaci√≥n
const token = Astro.cookies.get('sb-access-token')?.value;

if (!token) {
  return Astro.redirect('/auth/login');
}

// Por ahora, dejamos la carga de datos en el cliente
---

<Layout title="Clientes - CRM Ventas">
  <div class="clientes-container">
    <header class="page-header">
      <div class="header-content">
        <h1>Gesti√≥n de Clientes</h1>
        <p>Administra y consulta tu base de clientes</p>
      </div>
      <a href="/customers/crear" class="btn-primary">
        + Nuevo Cliente
      </a>
    </header>

    <!-- Filtros y b√∫squeda -->
    <div class="filters-section">
      <div class="search-box">
        <input
          type="text"
          id="searchInput"
          placeholder="Buscar por nombre, email o empresa..."
          class="search-input"
        />
      </div>
      
      <div class="filter-controls">
        <select id="estadoFilter" class="filter-select">
          <option value="">Todos los estados</option>
          <option value="activo">Activo</option>
          <option value="prospecto">Prospecto</option>
          <option value="lead">Lead</option>
          <option value="inactivo">Inactivo</option>
        </select>

        <select id="ordenFilter" class="filter-select">
          <option value="fecha_creacion-desc">M√°s recientes</option>
          <option value="fecha_creacion-asc">M√°s antiguos</option>
          <option value="nombre-asc">Nombre A-Z</option>
          <option value="nombre-desc">Nombre Z-A</option>
        </select>
      </div>
    </div>

    <!-- Lista de clientes -->
    <div id="clientesContainer">
      <div class="loading">
        <div class="spinner-large"></div>
        <p>Cargando clientes...</p>
      </div>
    </div>

    <!-- Paginaci√≥n -->
    <div id="paginationContainer" style="display: none;" class="pagination">
      <button id="prevBtn" class="pagination-btn" disabled>‚Üê Anterior</button>
      <span id="pageInfo" class="page-info">P√°gina 1</span>
      <button id="nextBtn" class="pagination-btn">Siguiente ‚Üí</button>
    </div>
  </div>
</Layout>

<style>
  .clientes-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  .page-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 2rem;
    padding-bottom: 1.5rem;
    border-bottom: 2px solid #e5e7eb;
  }

  .header-content h1 {
    font-size: 2rem;
    font-weight: 700;
    color: #1f2937;
    margin-bottom: 0.5rem;
  }

  .header-content p {
    color: #6b7280;
    font-size: 1rem;
  }

  .btn-primary {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    background: #3b82f6;
    color: white;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.2s;
  }

  .btn-primary:hover {
    background: #2563eb;
    transform: translateY(-1px);
  }

  .filters-section {
    display: flex;
    gap: 1rem;
    margin-bottom: 2rem;
    flex-wrap: wrap;
  }

  .search-box {
    flex: 1;
    min-width: 300px;
  }

  .search-input {
    width: 100%;
    padding: 0.75rem 1rem;
    border: 2px solid #e5e7eb;
    border-radius: 8px;
    font-size: 1rem;
    transition: border-color 0.2s;
  }

  .search-input:focus {
    outline: none;
    border-color: #3b82f6;
  }

  .filter-controls {
    display: flex;
    gap: 0.75rem;
  }

  .filter-select {
    padding: 0.75rem 1rem;
    border: 2px solid #e5e7eb;
    border-radius: 8px;
    font-size: 0.875rem;
    background: white;
    cursor: pointer;
  }

  .loading {
    text-align: center;
    padding: 4rem 2rem;
    color: #6b7280;
  }

  .spinner-large {
    width: 3rem;
    height: 3rem;
    border: 4px solid #e5e7eb;
    border-top-color: #3b82f6;
    border-radius: 50%;
    animation: spin 1s linear infinite;
    margin: 0 auto 1rem;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  .clientes-grid {
    display: grid;
    gap: 1rem;
  }

  .cliente-card {
    background: white;
    border: 2px solid #e5e7eb;
    border-radius: 12px;
    padding: 1.5rem;
    transition: all 0.2s;
    cursor: pointer;
  }

  .cliente-card:hover {
    border-color: #3b82f6;
    box-shadow: 0 4px 12px rgba(59, 130, 246, 0.1);
  }

  .cliente-header {
    display: flex;
    justify-content: space-between;
    align-items: start;
    margin-bottom: 1rem;
  }

  .cliente-nombre {
    font-size: 1.25rem;
    font-weight: 600;
    color: #1f2937;
    margin-bottom: 0.25rem;
  }

  .cliente-empresa {
    color: #6b7280;
    font-size: 0.875rem;
  }

  .estado-badge {
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
  }

  .estado-activo {
    background: #d1fae5;
    color: #065f46;
  }

  .estado-prospecto {
    background: #dbeafe;
    color: #1e40af;
  }

  .estado-lead {
    background: #fef3c7;
    color: #92400e;
  }

  .estado-inactivo {
    background: #f3f4f6;
    color: #4b5563;
  }

  .cliente-info {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 0.75rem;
    color: #6b7280;
    font-size: 0.875rem;
  }

  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
    color: #6b7280;
  }

  .empty-state h2 {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
    color: #374151;
  }

  .pagination {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    margin-top: 2rem;
  }

  .pagination-btn {
    padding: 0.5rem 1rem;
    background: white;
    border: 2px solid #e5e7eb;
    border-radius: 8px;
    cursor: pointer;
    font-weight: 500;
    transition: all 0.2s;
  }

  .pagination-btn:hover:not(:disabled) {
    border-color: #3b82f6;
    color: #3b82f6;
  }

  .pagination-btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .page-info {
    color: #6b7280;
    font-weight: 500;
  }

  @media (max-width: 768px) {
    .clientes-container {
      padding: 1rem;
    }

    .page-header {
      flex-direction: column;
      gap: 1rem;
    }

    .btn-primary {
      width: 100%;
      justify-content: center;
    }

    .filters-section {
      flex-direction: column;
    }

    .filter-controls {
      flex-direction: column;
    }
  }
</style>

<script>
  let currentPage = 1;
  const limit = 10;
  let searchTerm = '';
  let estadoFilter = '';
  let ordenFilter = 'fecha_creacion-desc';

  async function cargarClientes() {
    const container = document.getElementById('clientesContainer');
    if (!container) return;

    container.innerHTML = '<div class="loading"><div class="spinner-large"></div><p>Cargando clientes...</p></div>';

    try {
      const params = new URLSearchParams({
        limite: limit.toString(),
        offset: ((currentPage - 1) * limit).toString(),
      });

      if (searchTerm) params.append('busqueda', searchTerm);
      if (estadoFilter) params.append('estado', estadoFilter);
      
      const [ordenarPor, orden] = ordenFilter.split('-');
      params.append('ordenar_por', ordenarPor);
      params.append('orden', orden);

      const response = await fetch(`/api/customers?${params}`);
      
      if (!response.ok) {
        throw new Error('Error al cargar clientes');
      }

      const result = await response.json();

      if (!result.data || result.data.length === 0) {
        container.innerHTML = `
          <div class="empty-state">
            <h2>No hay clientes</h2>
            <p>${searchTerm || estadoFilter ? 'No se encontraron clientes con los filtros aplicados' : 'Comienza creando tu primer cliente'}</p>
          </div>
        `;
        document.getElementById('paginationContainer')!.style.display = 'none';
        return;
      }

      const clientesHTML = result.data.map((cliente: any) => `
        <div class="cliente-card" onclick="window.location.href='/customers/${cliente.id}'">
          <div class="cliente-header">
            <div>
              <div class="cliente-nombre">${cliente.nombre}</div>
              ${cliente.empresa ? `<div class="cliente-empresa">${cliente.empresa}</div>` : ''}
            </div>
            <span class="estado-badge estado-${cliente.estado}">${cliente.estado}</span>
          </div>
          <div class="cliente-info">
            <div>üìß ${cliente.correo_electronico}</div>
            ${cliente.telefono ? `<div>üì± ${cliente.telefono}</div>` : ''}
          </div>
        </div>
      `).join('');

      container.innerHTML = `<div class="clientes-grid">${clientesHTML}</div>`;

      // Actualizar paginaci√≥n
      const paginationContainer = document.getElementById('paginationContainer');
      if (paginationContainer) {
        paginationContainer.style.display = 'flex';
        const prevBtn = document.getElementById('prevBtn') as HTMLButtonElement;
        const nextBtn = document.getElementById('nextBtn') as HTMLButtonElement;
        const pageInfo = document.getElementById('pageInfo');
        if (prevBtn) prevBtn.disabled = currentPage === 1;
        if (nextBtn) nextBtn.disabled = !result.tiene_mas;
        if (pageInfo) pageInfo.textContent = `P√°gina ${currentPage} - ${result.total} clientes`;
      }

    } catch (error) {
      console.error('Error:', error);
      container.innerHTML = `
        <div class="empty-state">
          <h2>Error al cargar clientes</h2>
          <p>Por favor, intenta de nuevo m√°s tarde</p>
        </div>
      `;
    }
  }

  // Event listeners
  document.addEventListener('DOMContentLoaded', () => {
    cargarClientes();

    // B√∫squeda con debounce
    let searchTimeout: ReturnType<typeof setTimeout>;
    document.getElementById('searchInput')?.addEventListener('input', (e) => {
      clearTimeout(searchTimeout);
      searchTimeout = setTimeout(() => {
        searchTerm = (e.target as HTMLInputElement).value;
        currentPage = 1;
        cargarClientes();
      }, 300);
    });

    // Filtro de estado
    document.getElementById('estadoFilter')?.addEventListener('change', (e) => {
      estadoFilter = (e.target as HTMLSelectElement).value;
      currentPage = 1;
      cargarClientes();
    });

    // Filtro de orden
    document.getElementById('ordenFilter')?.addEventListener('change', (e) => {
      ordenFilter = (e.target as HTMLSelectElement).value;
      currentPage = 1;
      cargarClientes();
    });

    // Paginaci√≥n
    document.getElementById('prevBtn')?.addEventListener('click', () => {
      if (currentPage > 1) {
        currentPage--;
        cargarClientes();
      }
    });

    document.getElementById('nextBtn')?.addEventListener('click', () => {
      currentPage++;
      cargarClientes();
    });
  });
</script>
