  a.border-gray-300 { background: rgba(255, 255, 255, 0.03) !important; border: 1px solid rgba(255, 255, 255, 0.2) !important; color: #cbd5e1 !important; }
  a.border-gray-300:hover { border-color: rgba(0, 255, 242, 0.3) !important; color: #00fff2 !important; }
  button[type="submit"] { background: linear-gradient(135deg, rgba(0, 255, 242, 0.2), rgba(0, 180, 255, 0.2)) !important; border: 1px solid #00fff2 !important; color: #00fff2 !important; box-shadow: 0 0 20px rgba(0, 255, 242, 0.3); }
