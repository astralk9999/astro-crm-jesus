---
import Layout from '../../../layouts/Layout.astro';
import { isAuthenticated, isAdmin } from '../../../lib/services/authService';
import { getLicenseById } from '../../../lib/services/licensesService';
import { getClients } from '../../../lib/services/clientsService';
import { getProducts } from '../../../lib/services/productsService';

// Verificar autenticación y permisos
const token = Astro.cookies.get('sb-access-token')?.value;
const authenticated = await isAuthenticated(token);
if (!authenticated) {
  return Astro.redirect('/login');
}

const hasAdminPermission = await isAdmin(token);
if (!hasAdminPermission) {
  return Astro.redirect('/licencias');
}

// Obtener el ID de la licencia de los parámetros
const { id } = Astro.params;

if (!id) {
  return Astro.redirect('/licencias');
}

// Obtener información de la licencia
const licenseResponse = await getLicenseById(id, token);
if (!licenseResponse.success || !licenseResponse.data) {
  console.error('Error fetching license:', licenseResponse.error);
  return Astro.redirect('/licencias');
}

// El tipo de retorno puede ser un array o un objeto
const license = Array.isArray(licenseResponse.data) ? licenseResponse.data[0] : licenseResponse.data;

if (!license) {
  return Astro.redirect('/licencias');
}

// Obtener clientes y productos para los selectores
const clientsResponse = await getClients(token);
const clients = clientsResponse.success ? clientsResponse.data : [];

const productsResponse = await getProducts(token);
const products = productsResponse.success ? productsResponse.data : [];
---

<Layout title={`Editar Licencia - SoftControl CRM`}>
  <div class="container mx-auto px-4 py-8">
    <!-- Encabezado -->
    <div class="mb-8">
      <div class="flex items-center gap-2 text-sm text-gray-600 mb-4">
        <a href="/licencias" class="hover:text-blue-600">Licencias</a>
        <span>/</span>
        <a href={`/licencias/${id}`} class="hover:text-blue-600">Licencia</a>
        <span>/</span>
        <span>Editar</span>
      </div>
      <h1 class="text-3xl font-bold text-gray-900">Editar Licencia</h1>
      <p class="text-gray-600 mt-2">Modifica la información de la licencia</p>
    </div>

    <!-- Formulario -->
    <div class="bg-white rounded-lg shadow-md p-6">
      <form id="editLicenseForm" class="space-y-6">
        <input type="hidden" id="licenseId" value={id} />
        
        <!-- Información básica -->
        <div>
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Información Básica</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Cliente -->
            <div>
              <label for="client_id" class="block text-sm font-medium text-gray-700 mb-2">
                Cliente <span class="text-red-500">*</span>
              </label>
              <select
                id="client_id"
                name="client_id"
                required
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              >
                <option value="">Selecciona un cliente</option>
                {clients && clients.map((client) => (
                  <option value={client.id} selected={client.id === license.client_id}>
                    {client.name} {client.company ? `- ${client.company}` : ''}
                  </option>
                ))}
              </select>
            </div>

            <!-- Producto -->
            <div>
              <label for="product_id" class="block text-sm font-medium text-gray-700 mb-2">
                Producto <span class="text-red-500">*</span>
              </label>
              <select
                id="product_id"
                name="product_id"
                required
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              >
                <option value="">Selecciona un producto</option>
                {products && products.map((product) => (
                  <option value={product.id} selected={product.id === license.product_id}>
                    {product.name}
                  </option>
                ))}
              </select>
            </div>
          </div>
        </div>

        <!-- Tipo de licencia -->
        <div>
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Tipo de Licencia</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <label class="relative flex items-start p-4 border-2 border-gray-300 rounded-lg cursor-pointer hover:border-blue-500 transition-colors">
              <input
                type="radio"
                name="type"
                value="licencia_unica"
                class="mt-1"
                required
                checked={license.type === 'licencia_unica'}
              />
              <div class="ml-3">
                <span class="block text-sm font-medium text-gray-900">Licencia Única</span>
                <span class="block text-sm text-gray-500">Pago único, sin fecha de vencimiento</span>
              </div>
            </label>

            <label class="relative flex items-start p-4 border-2 border-gray-300 rounded-lg cursor-pointer hover:border-blue-500 transition-colors">
              <input
                type="radio"
                name="type"
                value="suscripcion"
                class="mt-1"
                required
                checked={license.type === 'suscripcion'}
              />
              <div class="ml-3">
                <span class="block text-sm font-medium text-gray-900">Suscripción</span>
                <span class="block text-sm text-gray-500">Renovación periódica con fecha de vencimiento</span>
              </div>
            </label>
          </div>
        </div>

        <!-- Fechas -->
        <div id="datesSection">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Fechas</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Fecha de inicio -->
            <div>
              <label for="start_date" class="block text-sm font-medium text-gray-700 mb-2">
                Fecha de inicio <span class="text-red-500">*</span>
              </label>
              <input
                type="date"
                id="start_date"
                name="start_date"
                required
                value={license.start_date}
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              />
            </div>

            <!-- Fecha de fin (solo para suscripciones) -->
            <div id="endDateField" class={license.type === 'suscripcion' ? '' : 'hidden'}>
              <label for="end_date" class="block text-sm font-medium text-gray-700 mb-2">
                Fecha de fin <span class="text-red-500">*</span>
              </label>
              <input
                type="date"
                id="end_date"
                name="end_date"
                value={license.end_date || ''}
                required={license.type === 'suscripcion'}
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              />
            </div>
          </div>
        </div>

        <!-- Estado -->
        <div>
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Estado</h3>
          <div>
            <label for="status" class="block text-sm font-medium text-gray-700 mb-2">
              Estado de la licencia <span class="text-red-500">*</span>
            </label>
            <select
              id="status"
              name="status"
              required
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            >
              <option value="activa" selected={license.status === 'activa'}>Activa</option>
              <option value="inactiva" selected={license.status === 'inactiva'}>Inactiva</option>
              <option value="pendiente_pago" selected={license.status === 'pendiente_pago'}>Pendiente de Pago</option>
            </select>
          </div>
        </div>

        <!-- Botones -->
        <div class="flex justify-end gap-4 pt-4 border-t">
          <a href={`/licencias/${id}`} class="px-6 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50">
            Cancelar
          </a>
          <button
            type="submit"
            class="px-6 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
          >
            Guardar Cambios
          </button>
        </div>
      </form>
    </div>
  </div>

  <!-- Mensaje de éxito -->
  <div id="successMessage" class="hidden fixed top-4 right-4 bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded z-50" role="alert">
    <span class="block sm:inline">Licencia actualizada exitosamente</span>
  </div>

  <!-- Mensaje de error -->
  <div id="errorMessage" class="hidden fixed top-4 right-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded z-50" role="alert">
    <span class="block sm:inline" id="errorText">Error al actualizar la licencia</span>
  </div>

  <script>
    import { updateLicense } from '../../../lib/services/licensesService';

    const form = document.getElementById('editLicenseForm');
    const typeRadios = document.querySelectorAll('input[name="type"]');
    const endDateField = document.getElementById('endDateField');
    const endDateInput = document.getElementById('end_date');
    const successMessage = document.getElementById('successMessage');
    const errorMessage = document.getElementById('errorMessage');
    const errorText = document.getElementById('errorText');
    const licenseIdInput = document.getElementById('licenseId') as HTMLInputElement;

    // Mostrar/ocultar campo de fecha de fin según el tipo
    typeRadios.forEach(radio => {
      radio.addEventListener('change', (e) => {
        const target = e.target as HTMLInputElement;
        if (target.value === 'suscripcion') {
          endDateField?.classList.remove('hidden');
          endDateInput?.setAttribute('required', 'required');
        } else {
          endDateField?.classList.add('hidden');
          endDateInput?.removeAttribute('required');
          if (endDateInput) endDateInput.value = '';
        }
      });
    });

    form?.addEventListener('submit', async (e) => {
      e.preventDefault();

      const licenseId = licenseIdInput?.value;
      if (!licenseId) return;

      const formData = new FormData(form as HTMLFormElement);
      
      const licenseData = {
        client_id: formData.get('client_id') as string,
        product_id: formData.get('product_id') as string,
        type: formData.get('type') as 'licencia_unica' | 'suscripcion',
        start_date: formData.get('start_date') as string,
        end_date: (formData.get('end_date') as string) || undefined,
        status: formData.get('status') as 'activa' | 'inactiva' | 'pendiente_pago'
      };

      try {
        const response = await updateLicense(licenseId, licenseData);
        
        if (response.success) {
          successMessage?.classList.remove('hidden');
          setTimeout(() => {
            window.location.href = `/licencias/${licenseId}`;
          }, 2000);
        } else {
          if (errorText) {
            errorText.textContent = response.error || 'Error al actualizar la licencia';
          }
          errorMessage?.classList.remove('hidden');
          setTimeout(() => {
            errorMessage?.classList.add('hidden');
          }, 5000);
        }
      } catch (error) {
        if (errorText) {
          errorText.textContent = 'Error inesperado al actualizar la licencia';
        }
        errorMessage?.classList.remove('hidden');
        setTimeout(() => {
          errorMessage?.classList.add('hidden');
        }, 5000);
      }
    });
  </script>
</Layout>

