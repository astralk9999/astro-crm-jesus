---
import Layout from '../../../layouts/Layout.astro';
import { isAuthenticated, getUserProfile } from '../../../lib/services/authService';
import { getLicenseById } from '../../../lib/services/licensesService';

// Verificar autenticación
const token = Astro.cookies.get('sb-access-token')?.value;
const authenticated = await isAuthenticated(token);
if (!authenticated) {
  return Astro.redirect('/login');
}

// Obtener perfil del usuario
const userProfile = await getUserProfile(token);

// Obtener el ID de la licencia de los parámetros
const { id } = Astro.params;

if (!id) {
  return Astro.redirect('/licencias');
}

// Obtener información de la licencia
const licenseResponse = await getLicenseById(id, token);
if (!licenseResponse.success || !licenseResponse.data) {
  console.error('Error fetching license:', licenseResponse.error);
  return Astro.redirect('/licencias');
}

// El tipo de retorno puede ser un array o un objeto
const license = Array.isArray(licenseResponse.data) ? licenseResponse.data[0] : licenseResponse.data;

if (!license) {
  return Astro.redirect('/licencias');
}

// Función para formatear fechas
function formatDate(date: string) {
  if (!date) return 'N/A';
  return new Date(date).toLocaleDateString('es-ES', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}

// Función para obtener el color del estado
function getStatusColor(status: string) {
  switch (status) {
    case 'activa':
      return 'bg-green-100 text-green-800';
    case 'inactiva':
      return 'bg-gray-100 text-gray-800';
    case 'pendiente_pago':
      return 'bg-yellow-100 text-yellow-800';
    default:
      return 'bg-gray-100 text-gray-800';
  }
}

// Función para obtener el texto del estado
function getStatusText(status: string) {
  switch (status) {
    case 'activa':
      return 'Activa';
    case 'inactiva':
      return 'Inactiva';
    case 'pendiente_pago':
      return 'Pendiente de Pago';
    default:
      return status;
  }
}
---

<Layout title={`Detalles de Licencia - SoftControl CRM`}>
  <div class="container mx-auto px-4 py-8">
    <!-- Encabezado -->
    <div class="mb-8">
      <div class="flex items-center gap-2 text-sm text-gray-600 mb-4">
        <a href="/licencias" class="hover:text-blue-600">Licencias</a>
        <span>/</span>
        <span>Detalles</span>
      </div>
      <div class="flex justify-between items-start">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Detalles de Licencia</h1>
          <p class="text-gray-600 mt-2">Información completa de la licencia</p>
        </div>
        {userProfile?.role === 'admin' && (
          <div class="flex gap-2">
            <a href={`/licencias/${id}/editar`} class="btn-primary bg-indigo-600 hover:bg-indigo-700">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
              </svg>
              Editar
            </a>
            <button 
              id="deleteLicenseBtn"
              class="px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors flex items-center"
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
              </svg>
              Eliminar
            </button>
          </div>
        )}
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Información Principal -->
      <div class="lg:col-span-2 space-y-6">
        <!-- Tarjeta de Estado -->
        <div class="bg-white rounded-lg shadow-md p-6">
          <div class="flex justify-between items-center mb-4">
            <h2 class="text-xl font-semibold text-gray-900">Estado de la Licencia</h2>
            <span class={`px-3 py-1 rounded-full text-sm font-semibold ${getStatusColor(license.status)}`}>
              {getStatusText(license.status)}
            </span>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <p class="text-sm text-gray-500 mb-1">Tipo de Licencia</p>
              <p class="font-medium text-gray-900">
                {license.type === 'licencia_unica' ? 'Licencia Única' : 'Suscripción'}
              </p>
            </div>
            <div>
              <p class="text-sm text-gray-500 mb-1">ID de Licencia</p>
              <p class="font-mono text-sm text-gray-900">{license.id}</p>
            </div>
            <div>
              <p class="text-sm text-gray-500 mb-1">Fecha de Inicio</p>
              <p class="font-medium text-gray-900">{formatDate(license.start_date)}</p>
            </div>
            {license.type === 'suscripcion' && (
              <div>
                <p class="text-sm text-gray-500 mb-1">Fecha de Vencimiento</p>
                <p class="font-medium text-gray-900">{formatDate(license.end_date)}</p>
              </div>
            )}
          </div>
        </div>

        <!-- Tarjeta de Producto -->
        <div class="bg-white rounded-lg shadow-md p-6">
          <h2 class="text-xl font-semibold text-gray-900 mb-4">Producto Asociado</h2>
          {license.product ? (
            <div>
              <h3 class="text-lg font-medium text-blue-600 mb-2">
                <a href={`/productos/${license.product.id}`} class="hover:underline">
                  {license.product.name}
                </a>
              </h3>
              <p class="text-gray-600 mb-4">{license.product.description || 'Sin descripción'}</p>
              
              <div class="flex gap-4 text-sm">
                {license.product.price_one_payment && (
                  <div class="bg-gray-50 px-3 py-2 rounded">
                    <span class="text-gray-500">Pago único:</span>
                    <span class="font-semibold text-gray-900 ml-1">
                      ${license.product.price_one_payment.toLocaleString('es-MX', { minimumFractionDigits: 2 })}
                    </span>
                  </div>
                )}
                {license.product.price_subscription && (
                  <div class="bg-gray-50 px-3 py-2 rounded">
                    <span class="text-gray-500">Suscripción:</span>
                    <span class="font-semibold text-gray-900 ml-1">
                      ${license.product.price_subscription.toLocaleString('es-MX', { minimumFractionDigits: 2 })}
                      <span class="text-xs text-gray-500">/mes</span>
                    </span>
                  </div>
                )}
              </div>
            </div>
          ) : (
            <p class="text-red-500">Producto no encontrado</p>
          )}
        </div>
      </div>

      <!-- Sidebar -->
      <div class="space-y-6">
        <!-- Tarjeta de Cliente -->
        <div class="bg-white rounded-lg shadow-md p-6">
          <h2 class="text-xl font-semibold text-gray-900 mb-4">Cliente</h2>
          {license.client ? (
            <div>
              <div class="flex items-center mb-4">
                <div class="h-10 w-10 rounded-full bg-blue-100 flex items-center justify-center text-blue-600 font-bold text-lg">
                  {license.client.name.charAt(0).toUpperCase()}
                </div>
                <div class="ml-3">
                  <p class="text-sm font-medium text-gray-900">
                    <a href={`/clientes/${license.client.id}`} class="hover:text-blue-600 hover:underline">
                      {license.client.name}
                    </a>
                  </p>
                  <p class="text-sm text-gray-500">{license.client.company || 'Sin empresa'}</p>
                </div>
              </div>
              
              <div class="space-y-3">
                <div class="flex items-center text-sm text-gray-600">
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                  <a href={`mailto:${license.client.email}`} class="hover:text-blue-600">
                    {license.client.email}
                  </a>
                </div>
              </div>
            </div>
          ) : (
            <p class="text-red-500">Cliente no encontrado</p>
          )}
        </div>

        <!-- Información Adicional -->
        <div class="bg-white rounded-lg shadow-md p-6">
          <h2 class="text-sm font-semibold text-gray-500 uppercase tracking-wider mb-4">Información del Sistema</h2>
          <div class="space-y-3 text-sm">
            <div class="flex justify-between">
              <span class="text-gray-500">Creado el:</span>
              <span class="text-gray-900">{formatDate(license.created_at)}</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal de confirmación de eliminación -->
  <div id="deleteModal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50">
    <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
      <div class="mt-3 text-center">
        <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-red-100">
          <svg class="h-6 w-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
          </svg>
        </div>
        <h3 class="text-lg leading-6 font-medium text-gray-900 mt-4">Confirmar eliminación</h3>
        <div class="mt-2 px-7 py-3">
          <p class="text-sm text-gray-500">
            ¿Estás seguro de que deseas eliminar esta licencia? Esta acción no se puede deshacer.
          </p>
        </div>
        <div class="items-center px-4 py-3">
          <button id="confirmDelete" class="px-4 py-2 bg-red-500 text-white text-base font-medium rounded-md w-24 mr-2 hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-red-300">
            Eliminar
          </button>
          <button id="cancelDelete" class="px-4 py-2 bg-gray-200 text-gray-800 text-base font-medium rounded-md w-24 hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-gray-300">
            Cancelar
          </button>
        </div>
      </div>
    </div>
  </div>

  <input type="hidden" id="licenseId" value={id} />

  <script>
    import { deleteLicense } from '../../../lib/services/licensesService';

    const deleteBtn = document.getElementById('deleteLicenseBtn');
    const deleteModal = document.getElementById('deleteModal');
    const confirmDeleteBtn = document.getElementById('confirmDelete');
    const cancelDeleteBtn = document.getElementById('cancelDelete');
    const licenseId = (document.getElementById('licenseId') as HTMLInputElement)?.value;

    deleteBtn?.addEventListener('click', () => {
      deleteModal?.classList.remove('hidden');
    });

    cancelDeleteBtn?.addEventListener('click', () => {
      deleteModal?.classList.add('hidden');
    });

    confirmDeleteBtn?.addEventListener('click', async () => {
      if (licenseId) {
        const response = await deleteLicense(licenseId);
        if (response.success) {
          window.location.href = '/licencias';
        } else {
          alert('Error al eliminar la licencia: ' + response.error);
          deleteModal?.classList.add('hidden');
        }
      }
    });

    deleteModal?.addEventListener('click', (e) => {
      if (e.target === deleteModal) {
        deleteModal.classList.add('hidden');
      }
    });
  </script>
</Layout>

