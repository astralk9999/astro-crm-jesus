---
import Layout from '../../layouts/Layout.astro';
import { isAuthenticated, isAdmin } from '../../lib/services/authService';
import { getClients } from '../../lib/services/clientsService';
import { getProducts } from '../../lib/services/productsService';

// Verificar autenticación y permisos
const token = Astro.cookies.get('sb-access-token')?.value;
const authenticated = await isAuthenticated(token);
if (!authenticated) {
  return Astro.redirect('/login');
}

const hasAdminPermission = await isAdmin(token);
if (!hasAdminPermission) {
  return Astro.redirect('/licencias');
}

// Obtener clientes y productos para los selectores
const clientsResponse = await getClients(token);
const clients = clientsResponse.success ? clientsResponse.data : [];

const productsResponse = await getProducts(token);
const products = productsResponse.success ? productsResponse.data : [];
---

<Layout title="Nueva Licencia - SoftControl CRM">
  <div class="container mx-auto px-4 py-8">
    <!-- Encabezado -->
    <div class="mb-8">
      <div class="flex items-center gap-2 text-sm text-gray-600 mb-4">
        <a href="/licencias" class="hover:text-blue-600">Licencias</a>
        <span>/</span>
        <span>Nueva Licencia</span>
      </div>
      <h1 class="text-3xl font-bold text-gray-900">Crear Nueva Licencia</h1>
      <p class="text-gray-600 mt-2">Asigna una licencia a un cliente</p>
    </div>

    <!-- Formulario -->
    <div class="bg-white rounded-lg shadow-md p-6">
      <form id="newLicenseForm" class="space-y-6">
        <!-- Información básica -->
        <div>
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Información Básica</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Cliente -->
            <div>
              <label for="client_id" class="block text-sm font-medium text-gray-700 mb-2">
                Cliente <span class="text-red-500">*</span>
              </label>
              <select
                id="client_id"
                name="client_id"
                required
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              >
                <option value="">Selecciona un cliente</option>
                {clients && clients.map((client) => (
                  <option value={client.id}>{client.name} {client.company ? `- ${client.company}` : ''}</option>
                ))}
              </select>
            </div>

            <!-- Producto -->
            <div>
              <label for="product_id" class="block text-sm font-medium text-gray-700 mb-2">
                Producto <span class="text-red-500">*</span>
              </label>
              <select
                id="product_id"
                name="product_id"
                required
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              >
                <option value="">Selecciona un producto</option>
                {products && products.map((product) => (
                  <option value={product.id}>{product.name}</option>
                ))}
              </select>
            </div>
          </div>
        </div>

        <!-- Tipo de licencia -->
        <div>
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Tipo de Licencia</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <label class="relative flex items-start p-4 border-2 border-gray-300 rounded-lg cursor-pointer hover:border-blue-500 transition-colors">
              <input
                type="radio"
                name="type"
                value="licencia_unica"
                class="mt-1"
                required
              />
              <div class="ml-3">
                <span class="block text-sm font-medium text-gray-900">Licencia Única</span>
                <span class="block text-sm text-gray-500">Pago único, sin fecha de vencimiento</span>
              </div>
            </label>

            <label class="relative flex items-start p-4 border-2 border-gray-300 rounded-lg cursor-pointer hover:border-blue-500 transition-colors">
              <input
                type="radio"
                name="type"
                value="suscripcion"
                class="mt-1"
                required
              />
              <div class="ml-3">
                <span class="block text-sm font-medium text-gray-900">Suscripción</span>
                <span class="block text-sm text-gray-500">Renovación periódica con fecha de vencimiento</span>
              </div>
            </label>
          </div>
        </div>

        <!-- Fechas -->
        <div id="datesSection">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Fechas</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Fecha de inicio -->
            <div>
              <label for="start_date" class="block text-sm font-medium text-gray-700 mb-2">
                Fecha de inicio <span class="text-red-500">*</span>
              </label>
              <input
                type="date"
                id="start_date"
                name="start_date"
                required
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              />
            </div>

            <!-- Fecha de fin (solo para suscripciones) -->
            <div id="endDateField" class="hidden">
              <label for="end_date" class="block text-sm font-medium text-gray-700 mb-2">
                Fecha de fin <span class="text-red-500">*</span>
              </label>
              <input
                type="date"
                id="end_date"
                name="end_date"
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              />
            </div>
          </div>
        </div>

        <!-- Estado -->
        <div>
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Estado</h3>
          <div>
            <label for="status" class="block text-sm font-medium text-gray-700 mb-2">
              Estado de la licencia <span class="text-red-500">*</span>
            </label>
            <select
              id="status"
              name="status"
              required
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            >
              <option value="activa">Activa</option>
              <option value="inactiva">Inactiva</option>
              <option value="pendiente_pago">Pendiente de Pago</option>
            </select>
          </div>
        </div>

        <!-- Botones -->
        <div class="flex justify-end gap-4 pt-4 border-t">
          <a href="/licencias" class="px-6 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50">
            Cancelar
          </a>
          <button
            type="submit"
            class="px-6 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
          >
            Crear Licencia
          </button>
        </div>
      </form>
    </div>
  </div>

  <!-- Mensaje de éxito -->
  <div id="successMessage" class="hidden fixed top-4 right-4 bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded z-50" role="alert">
    <span class="block sm:inline">Licencia creada exitosamente</span>
  </div>

  <!-- Mensaje de error -->
  <div id="errorMessage" class="hidden fixed top-4 right-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded z-50" role="alert">
    <span class="block sm:inline" id="errorText">Error al crear la licencia</span>
  </div>

  <script>
    import { createLicense } from '../../lib/services/licensesService';
    import { agregarNotificacion } from '../../servicios/NotificacionesService';

    const form = document.getElementById('newLicenseForm');
    const typeRadios = document.querySelectorAll('input[name="type"]');
    const endDateField = document.getElementById('endDateField');
    const endDateInput = document.getElementById('end_date');
    const successMessage = document.getElementById('successMessage');
    const errorMessage = document.getElementById('errorMessage');
    const errorText = document.getElementById('errorText');

    // Mostrar/ocultar campo de fecha de fin según el tipo
    typeRadios.forEach(radio => {
      radio.addEventListener('change', (e) => {
        const target = e.target;
        if (target.value === 'suscripcion') {
          endDateField?.classList.remove('hidden');
          endDateInput?.setAttribute('required', 'required');
        } else {
          endDateField?.classList.add('hidden');
          endDateInput?.removeAttribute('required');
          endDateInput.value = '';
        }
      });
    });

    // Establecer fecha de inicio por defecto a hoy
    const startDateInput = document.getElementById('start_date');
    if (startDateInput) {
      const today = new Date().toISOString().split('T')[0];
      startDateInput.value = today;
    }

    form?.addEventListener('submit', async (e) => {
      e.preventDefault();

      const formData = new FormData(form);
      
      const licenseData = {
        client_id: formData.get('client_id'),
        product_id: formData.get('product_id'),
        type: formData.get('type'),
        start_date: formData.get('start_date'),
        end_date: formData.get('end_date') || undefined,
        status: formData.get('status')
      };

      try {
        const response = await createLicense(licenseData);
        
        if (response.success) {
          const licenciaCreada = response.data;
          const id = licenciaCreada?.id;

          const clienteSelect = document.getElementById('client_id');
          const productoSelect = document.getElementById('product_id');
          const clienteTexto = clienteSelect && 'options' in clienteSelect ? clienteSelect.options[clienteSelect.selectedIndex]?.textContent || '' : '';
          const productoTexto = productoSelect && 'options' in productoSelect ? productoSelect.options[productoSelect.selectedIndex]?.textContent || '' : '';

          if (id) {
            const tipo = String(licenseData.type || '');
            const estado = String(licenseData.status || '');

            agregarNotificacion({
              tipo: 'licencia',
              titulo: 'Nueva licencia creada',
              descripcion: `${clienteTexto} · ${productoTexto} · ${tipo} · ${estado}`,
              enlace: `/licencias/${id}`,
              datos_basicos: {
                id,
                cliente: clienteTexto,
                producto: productoTexto,
                tipo,
                estado,
                inicio: licenseData.start_date,
                fin: licenseData.end_date,
              },
            });
          }

          successMessage?.classList.remove('hidden');
          setTimeout(() => {
            window.location.href = '/licencias';
          }, 2000);
        } else {
          if (errorText) {
            errorText.textContent = response.error || 'Error al crear la licencia';
          }
          errorMessage?.classList.remove('hidden');
          setTimeout(() => {
            errorMessage?.classList.add('hidden');
          }, 5000);
        }
      } catch (error) {
        if (errorText) {
          errorText.textContent = 'Error inesperado al crear la licencia';
        }
        errorMessage?.classList.remove('hidden');
        setTimeout(() => {
          errorMessage?.classList.add('hidden');
        }, 5000);
      }
    });
  </script>
</Layout>

<style>
  /* NUEVA LICENCIA - ESTILO FUTURISTA NEÓN */
  h1, h3, .text-gray-900 { color: #ffffff !important; }
  h1 { text-shadow: 0 0 30px rgba(0, 255, 242, 0.2); }
  .text-gray-600, .text-gray-500 { color: #94a3b8 !important; }
  .text-gray-700 { color: #cbd5e1 !important; }
  .text-sm.text-gray-600 a { color: #00fff2 !important; }
  .text-sm.text-gray-600 a:hover { text-shadow: 0 0 10px rgba(0, 255, 242, 0.5); }
  .bg-white { background: rgba(10, 15, 25, 0.8) !important; border: 1px solid rgba(0, 255, 242, 0.15) !important; backdrop-filter: blur(10px); }
  label { color: #cbd5e1 !important; }
  .text-red-500 { color: #ff2d95 !important; }
  input, select { background: rgba(255, 255, 255, 0.03) !important; border: 1px solid rgba(0, 255, 242, 0.2) !important; color: #ffffff !important; }
  input:focus, select:focus { border-color: #00fff2 !important; box-shadow: 0 0 20px rgba(0, 255, 242, 0.2) !important; }
  input::placeholder { color: #64748b !important; }
  option { background: #0a0f19 !important; color: #ffffff !important; }
  .border-t { border-color: rgba(0, 255, 242, 0.1) !important; }
  a.border-gray-300 { background: rgba(255, 255, 255, 0.03) !important; border: 1px solid rgba(255, 255, 255, 0.2) !important; color: #cbd5e1 !important; }
  a.border-gray-300:hover { border-color: rgba(0, 255, 242, 0.3) !important; color: #00fff2 !important; }
  button[type="submit"] { background: linear-gradient(135deg, rgba(0, 255, 242, 0.2), rgba(0, 180, 255, 0.2)) !important; border: 1px solid #00fff2 !important; color: #00fff2 !important; box-shadow: 0 0 20px rgba(0, 255, 242, 0.3); }
  button[type="submit"]:hover { box-shadow: 0 0 30px rgba(0, 255, 242, 0.5); }
  #successMessage { background: rgba(0, 255, 136, 0.15) !important; border: 1px solid rgba(0, 255, 136, 0.4) !important; color: #00ff88 !important; }
  #errorMessage { background: rgba(255, 45, 149, 0.15) !important; border: 1px solid rgba(255, 45, 149, 0.4) !important; color: #ff2d95 !important; }
  /* Radio buttons */
  input[type="radio"] { accent-color: #00fff2; }
  .bg-gray-50 { background: rgba(0, 255, 242, 0.03) !important; border: 1px solid rgba(0, 255, 242, 0.1) !important; }
</style>
