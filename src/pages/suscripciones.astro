---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Mis Suscripciones - SoftControl CRM">
  <div class="page-header">
    <h1>Mis Suscripciones</h1>
    <p>Gestiona tus planes y pagos</p>
  </div>

  <div class="subscriptions-container">
    <div id="loading" class="loading-state">
      <div class="spinner"></div>
      <p>Cargando suscripciones...</p>
    </div>

    <div id="empty" class="empty-state hidden">
      <div class="empty-icon">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
        </svg>
      </div>
      <h3>No tienes suscripciones</h3>
      <p>Explora nuestros planes y elige el que mejor se adapte a ti</p>
      <a href="/pricing" class="btn-primary">Ver Planes</a>
    </div>

    <div id="subscriptions-list" class="subscriptions-grid hidden"></div>
  </div>
</Layout>

<script>
  import { supabase } from '../lib/database/supabase';

  interface Subscription {
    id: string;
    plan_type: string;
    plan_name: string;
    amount: number;
    currency: string;
    status: string;
    created_at: string;
    paid_at: string | null;
  }

  async function loadSubscriptions() {
    const loading = document.getElementById('loading');
    const empty = document.getElementById('empty');
    const list = document.getElementById('subscriptions-list');

    try {
      const { data: { user } } = await supabase.auth.getUser();
      
      if (!user?.email) {
        loading?.classList.add('hidden');
        empty?.classList.remove('hidden');
        return;
      }

      const response = await fetch(`/api/subscriptions?email=${encodeURIComponent(user.email)}`);
      const result = await response.json();

      loading?.classList.add('hidden');

      if (!result.success || !result.subscriptions?.length) {
        empty?.classList.remove('hidden');
        return;
      }

      list?.classList.remove('hidden');
      renderSubscriptions(result.subscriptions);
    } catch (error) {
      console.error('Error loading subscriptions:', error);
      loading?.classList.add('hidden');
      empty?.classList.remove('hidden');
    }
  }

  function renderSubscriptions(subscriptions: Subscription[]) {
    const list = document.getElementById('subscriptions-list');
    if (!list) return;

    list.innerHTML = subscriptions.map(sub => `
      <div class="subscription-card ${sub.status}">
        <div class="card-header">
          <div class="plan-info">
            <h3>${sub.plan_name}</h3>
            <span class="status-badge ${sub.status}">${getStatusText(sub.status)}</span>
          </div>
          <div class="plan-price">
            <span class="amount">â‚¬${sub.amount.toFixed(2)}</span>
          </div>
        </div>
        <div class="card-body">
          <div class="info-row">
            <span class="label">Fecha de solicitud:</span>
            <span class="value">${formatDate(sub.created_at)}</span>
          </div>
          ${sub.paid_at ? `
          <div class="info-row">
            <span class="label">Fecha de pago:</span>
            <span class="value">${formatDate(sub.paid_at)}</span>
          </div>
          ` : ''}
          <div class="info-row">
            <span class="label">Tipo de plan:</span>
            <span class="value">${getPlanTypeText(sub.plan_type)}</span>
          </div>
        </div>
        ${sub.status === 'pending' ? `
        <div class="card-actions">
          <a href="/pricing" class="btn-pay">Completar pago</a>
        </div>
        ` : ''}
      </div>
    `).join('');
  }

  function getStatusText(status: string): string {
    const texts: Record<string, string> = {
      pending: 'Pendiente',
      paid: 'Pagado',
      cancelled: 'Cancelado',
      expired: 'Expirado',
    };
    return texts[status] || status;
  }

  function getPlanTypeText(type: string): string {
    const texts: Record<string, string> = {
      monthly: 'Mensual',
      annual: 'Anual',
      lifetime: 'Definitiva',
    };
    return texts[type] || type;
  }

  function formatDate(dateStr: string): string {
    return new Date(dateStr).toLocaleDateString('es-ES', {
      year: 'numeric',
      month: 'long',
      day: 'numeric',
      hour: '2-digit',
      minute: '2-digit',
    });
  }

  loadSubscriptions();
</script>

<style>
  .page-header {
    margin-bottom: 2rem;
  }

  .page-header h1 {
    font-size: 2rem;
    font-weight: 800;
    color: white;
    margin-bottom: 0.5rem;
  }

  .page-header p {
    color: #94a3b8;
  }

  .subscriptions-container {
    max-width: 900px;
  }

  .loading-state,
  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(0, 255, 242, 0.15);
    border-radius: 16px;
  }

  .spinner {
    width: 40px;
    height: 40px;
    border: 3px solid rgba(0, 255, 242, 0.2);
    border-top-color: #00fff2;
    border-radius: 50%;
    margin: 0 auto 1rem;
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  .empty-icon {
    width: 80px;
    height: 80px;
    margin: 0 auto 1.5rem;
    background: rgba(0, 255, 242, 0.1);
    border: 1px solid rgba(0, 255, 242, 0.3);
    border-radius: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .empty-icon svg {
    width: 40px;
    height: 40px;
    color: #00fff2;
  }

  .empty-state h3 {
    color: white;
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
  }

  .empty-state p {
    color: #64748b;
    margin-bottom: 1.5rem;
  }

  .btn-primary {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    background: linear-gradient(135deg, rgba(0, 255, 242, 0.2), rgba(255, 0, 255, 0.15));
    border: 1px solid #00fff2;
    border-radius: 10px;
    color: #00fff2;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s;
  }

  .btn-primary:hover {
    background: linear-gradient(135deg, rgba(0, 255, 242, 0.3), rgba(255, 0, 255, 0.25));
    box-shadow: 0 0 25px rgba(0, 255, 242, 0.4);
  }

  .hidden {
    display: none !important;
  }

  .subscriptions-grid {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .subscription-card {
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(0, 255, 242, 0.15);
    border-radius: 16px;
    overflow: hidden;
    transition: all 0.3s;
  }

  .subscription-card:hover {
    border-color: rgba(0, 255, 242, 0.3);
    box-shadow: 0 0 20px rgba(0, 255, 242, 0.1);
  }

  .subscription-card.paid {
    border-color: rgba(0, 255, 136, 0.3);
  }

  .subscription-card.pending {
    border-color: rgba(255, 200, 0, 0.3);
  }

  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.25rem 1.5rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    background: rgba(255, 255, 255, 0.02);
  }

  .plan-info {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .plan-info h3 {
    color: white;
    font-size: 1.125rem;
    font-weight: 600;
  }

  .status-badge {
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
  }

  .status-badge.paid {
    background: rgba(0, 255, 136, 0.15);
    color: #00ff88;
    border: 1px solid rgba(0, 255, 136, 0.3);
  }

  .status-badge.pending {
    background: rgba(255, 200, 0, 0.15);
    color: #ffc800;
    border: 1px solid rgba(255, 200, 0, 0.3);
  }

  .status-badge.cancelled {
    background: rgba(255, 77, 109, 0.15);
    color: #ff4d6d;
    border: 1px solid rgba(255, 77, 109, 0.3);
  }

  .plan-price .amount {
    font-size: 1.5rem;
    font-weight: 700;
    color: white;
  }

  .card-body {
    padding: 1.25rem 1.5rem;
  }

  .info-row {
    display: flex;
    justify-content: space-between;
    padding: 0.5rem 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  }

  .info-row:last-child {
    border-bottom: none;
  }

  .info-row .label {
    color: #64748b;
    font-size: 0.875rem;
  }

  .info-row .value {
    color: #cbd5e1;
    font-size: 0.875rem;
    font-weight: 500;
  }

  .card-actions {
    padding: 1rem 1.5rem;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    background: rgba(255, 200, 0, 0.05);
  }

  .btn-pay {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    padding: 0.75rem;
    background: rgba(255, 200, 0, 0.15);
    border: 1px solid rgba(255, 200, 0, 0.4);
    border-radius: 8px;
    color: #ffc800;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s;
  }

  .btn-pay:hover {
    background: rgba(255, 200, 0, 0.25);
    box-shadow: 0 0 20px rgba(255, 200, 0, 0.2);
  }

  @media (max-width: 640px) {
    .card-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }

    .plan-info {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }
  }
</style>
