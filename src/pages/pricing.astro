  }

  .btn-subscribe.lifetime {
    background: rgba(191, 0, 255, 0.15);
    border: 1px solid rgba(191, 0, 255, 0.5);
    color: #bf00ff;
  }

  .btn-subscribe.lifetime:hover {
    background: rgba(191, 0, 255, 0.25);
    box-shadow: 0 0 25px rgba(191, 0, 255, 0.3);
  }

  .pricing-footer {
    text-align: center;
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid rgba(0, 255, 242, 0.1);
  }

  .secure-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: rgba(0, 255, 136, 0.08);
    border: 1px solid rgba(0, 255, 136, 0.2);
    padding: 0.6rem 1.25rem;
    border-radius: 25px;
    color: #00ff88;
    font-size: 0.875rem;
    font-weight: 500;
    margin-bottom: 1rem;
