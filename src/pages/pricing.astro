    .pricing-grid {
      grid-template-columns: 1fr;
      max-width: 400px;
      margin: 0 auto;
    }

    .pricing-card.featured {
      transform: none;
      order: -1;
    }

    .pricing-card.featured:hover {
      transform: translateY(-5px);
    }
  }

  @media (max-width: 640px) {
    .pricing-header {
      padding: 1rem;
    }

    .pricing-content {
      padding: 2rem 1rem;
    }

    .pricing-intro h1 {
      font-size: 1.75rem;
    }

    .amount {
      font-size: 2.5rem;
    }
