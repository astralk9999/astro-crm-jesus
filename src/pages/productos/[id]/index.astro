    border-color: rgba(0, 255, 242, 0.2);
  }

  .license-info {
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
  }

  .client-name {
    font-size: 0.9375rem;
    font-weight: 500;
    color: white;
  }

  .license-type {
    font-size: 0.75rem;
    color: #94a3b8;
  }

  .status-badge {
    font-size: 0.75rem;
    font-weight: 600;
    padding: 0.25rem 0.625rem;
    border-radius: 9999px;
  }

  .status-badge.activa {
    background: rgba(0, 255, 136, 0.15);
    color: #00ff88;
  }

  .status-badge.inactiva {
