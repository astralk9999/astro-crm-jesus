  .modal-icon {
    width: 60px;
    height: 60px;
    margin: 0 auto 1rem;
    background: rgba(255, 45, 149, 0.15);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #ff2d95;
  }

  .modal-icon svg {
    width: 32px;
    height: 32px;
  }

  .modal-content h3 {
    font-size: 1.25rem;
    font-weight: 600;
    color: white;
    margin: 0 0 0.5rem;
  }

  .modal-content p {
    font-size: 0.9375rem;
    color: #94a3b8;
    margin: 0 0 0.5rem;
  }

  .modal-content .warning {
    font-size: 0.8125rem;
    color: #ff2d95;
