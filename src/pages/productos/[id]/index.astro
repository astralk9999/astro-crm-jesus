    font-size: 1.25rem;
    font-weight: 700;
  }

  .price-value.single {
    color: #00ff88;
    text-shadow: 0 0 10px rgba(0, 255, 136, 0.3);
  }

  .price-value.subscription {
    color: #00b4ff;
    text-shadow: 0 0 10px rgba(0, 180, 255, 0.3);
  }

  /* Panel de licencias */
  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }

  .card-header h2 {
    margin: 0;
  }

  .badge {
    background: rgba(191, 0, 255, 0.2);
    color: #bf00ff;
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
