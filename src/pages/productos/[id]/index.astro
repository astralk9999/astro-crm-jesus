---
// Página de detalle de producto - SoftControl CRM
import Layout from '../../../layouts/Layout.astro';
import { isAuthenticated, getUserProfile } from '../../../lib/services/authService';
import { getProductById } from '../../../lib/services/productsService';
import { getLicenses } from '../../../lib/services/licensesService';

// Verificar autenticación
const token = Astro.cookies.get('sb-access-token')?.value;
const authenticated = await isAuthenticated(token);
if (!authenticated) {
  return Astro.redirect('/login');
}

const userProfile = await getUserProfile(token);

// Obtener el ID del producto de los parámetros
const { id } = Astro.params;

if (!id) {
  return Astro.redirect('/productos');
}

// Obtener información del producto
const productResponse = await getProductById(id, token);
if (!productResponse.success || !productResponse.data) {
  return Astro.redirect('/productos');
}

const product = productResponse.data;

// Obtener licencias que usan este producto
const licensesResponse = await getLicenses(token);
const allLicenses = licensesResponse.success && licensesResponse.data ? licensesResponse.data : [];
const productLicenses = allLicenses.filter((l: any) => l.product_id === id);
---

<Layout title={`${product.name} - SoftControl CRM`}>
  <div class="page-container">
    <!-- Encabezado -->
    <header class="page-header animate-in">
      <div class="header-info">
        <div class="breadcrumb">
          <a href="/productos">Productos</a>
          <span>/</span>
          <span>{product.name}</span>
        </div>
        <div class="header-title">
          <div class="header-icon">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
            </svg>
          </div>
          <div>
            <h1>{product.name}</h1>
            <p>Información detallada del producto</p>
          </div>
        </div>
      </div>
      
      {userProfile?.role === 'admin' && (
        <div class="header-actions">
          <a href={`/productos/${id}/editar`} class="btn-primary">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            Editar
          </a>
          <button id="deleteBtn" data-product-id={id} data-product-name={product.name} class="btn-danger">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
            Eliminar
          </button>
        </div>
      )}
    </header>

    <div class="content-grid animate-in animate-delay-1">
      <!-- Información del Producto -->
      <div class="main-content">
        <div class="info-card">
          <h2>Información General</h2>
          
          <div class="info-grid">
            <div class="info-item">
              <label>Nombre del Producto</label>
              <p>{product.name}</p>
            </div>
            
            <div class="info-item full-width">
              <label>Descripción</label>
              <p>{product.description || 'Sin descripción'}</p>
            </div>
            
            <div class="info-item">
              <label>Fecha de Registro</label>
              <p>{new Date(product.created_at).toLocaleDateString('es-ES', { 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric' 
              })}</p>
            </div>
          </div>
        </div>

        <!-- Precios -->
        <div class="prices-card">
          <h2>Precios</h2>
          
          <div class="prices-grid">
            <div class="price-item">
              <div class="price-icon single">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div class="price-info">
                <span class="price-label">Pago Único</span>
                <span class="price-value single">
                  {product.price_one_payment 
                    ? `$${product.price_one_payment.toLocaleString('es-MX', { minimumFractionDigits: 2 })}` 
                    : 'No disponible'}
                </span>
              </div>
            </div>
            
            <div class="price-item">
              <div class="price-icon subscription">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                </svg>
              </div>
              <div class="price-info">
                <span class="price-label">Suscripción Mensual</span>
                <span class="price-value subscription">
                  {product.price_subscription 
                    ? `$${product.price_subscription.toLocaleString('es-MX', { minimumFractionDigits: 2 })}/mes` 
                    : 'No disponible'}
                </span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Panel lateral - Licencias -->
      <div class="side-panel">
        <div class="licenses-card">
          <div class="card-header">
            <h2>Licencias Asociadas</h2>
            <span class="badge">{productLicenses.length}</span>
          </div>
          
          {productLicenses.length > 0 ? (
            <div class="licenses-list">
              {productLicenses.map((license: any) => (
                <a href={`/licencias/${license.id}`} class="license-item">
                  <div class="license-info">
                    <span class="client-name">{license.client?.name || 'Cliente'}</span>
                    <span class="license-type">{license.type === 'licencia_unica' ? 'Licencia Única' : 'Suscripción'}</span>
                  </div>
                  <span class={`status-badge ${license.status}`}>
                    {license.status === 'activa' ? 'Activa' : 
                     license.status === 'inactiva' ? 'Inactiva' : 'Pendiente'}
                  </span>
                </a>
              ))}
            </div>
          ) : (
            <div class="empty-state">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
              <p>No hay licencias para este producto</p>
            </div>
          )}
        </div>
      </div>
    </div>
  </div>

  <!-- Modal de confirmación de eliminación -->
  <div id="deleteModal" class="modal hidden">
    <div class="modal-backdrop"></div>
    <div class="modal-content">
      <div class="modal-icon">
        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
        </svg>
      </div>
      <h3>Confirmar eliminación</h3>
      <p>¿Estás seguro de que deseas eliminar el producto <strong id="productNameModal"></strong>?</p>
      <p class="warning">Esta acción no se puede deshacer y eliminará todas las licencias asociadas.</p>
      <div class="modal-actions">
        <button id="cancelDelete" class="btn-secondary">Cancelar</button>
        <button id="confirmDelete" class="btn-danger">Eliminar</button>
      </div>
    </div>
  </div>

  <script>
    import { deleteProduct } from '../../../lib/services/productsService';

    const deleteBtn = document.getElementById('deleteBtn');
    const deleteModal = document.getElementById('deleteModal');
    const productNameModal = document.getElementById('productNameModal');
    const confirmDeleteBtn = document.getElementById('confirmDelete');
    const cancelDeleteBtn = document.getElementById('cancelDelete');
    
    let productToDelete: string | null = null;

    deleteBtn?.addEventListener('click', () => {
      productToDelete = deleteBtn.dataset.productId || null;
      const productName = deleteBtn.dataset.productName || '';
      if (productNameModal) productNameModal.textContent = productName;
      deleteModal?.classList.remove('hidden');
    });

    cancelDeleteBtn?.addEventListener('click', () => {
      deleteModal?.classList.add('hidden');
      productToDelete = null;
    });

    confirmDeleteBtn?.addEventListener('click', async () => {
      if (productToDelete) {
        const response = await deleteProduct(productToDelete);
        if (response.success) {
          window.location.href = '/productos';
        } else {
          alert('Error al eliminar el producto: ' + response.error);
        }
      }
    });

    deleteModal?.querySelector('.modal-backdrop')?.addEventListener('click', () => {
      deleteModal?.classList.add('hidden');
      productToDelete = null;
    });
  </script>
</Layout>

<style>
