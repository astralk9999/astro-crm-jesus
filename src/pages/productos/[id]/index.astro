    font-size: 1.875rem;
    font-weight: 800;
    color: white;
    margin: 0;
  }

  .header-title p {
    font-size: 0.9375rem;
    color: #94a3b8;
    margin: 0.25rem 0 0;
  }

  .header-actions {
    display: flex;
    gap: 0.75rem;
    margin-top: 1rem;
  }

  /* Grid de contenido */
  .content-grid {
    display: grid;
    grid-template-columns: 1fr 350px;
    gap: 1.5rem;
  }

  @media (max-width: 1024px) {
    .content-grid {
      grid-template-columns: 1fr;
