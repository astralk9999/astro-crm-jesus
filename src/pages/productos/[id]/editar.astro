---
import Layout from '../../../layouts/Layout.astro';
import { isAuthenticated, isAdmin } from '../../../lib/services/authService';
import { getProductById } from '../../../lib/services/productsService';

// Verificar autenticación y permisos
const token = Astro.cookies.get('sb-access-token')?.value;
const authenticated = await isAuthenticated(token);
if (!authenticated) {
  return Astro.redirect('/login');
}

const hasAdminPermission = await isAdmin(token);
if (!hasAdminPermission) {
  return Astro.redirect('/productos');
}

// Obtener el ID del producto de los parámetros
const { id } = Astro.params;

if (!id) {
  return Astro.redirect('/productos');
}

// Obtener información del producto
const productResponse = await getProductById(id, token);
if (!productResponse.success || !productResponse.data) {
  return Astro.redirect('/productos');
}

// El tipo de retorno puede ser un array o un objeto, aseguramos que sea un objeto
const product = Array.isArray(productResponse.data) ? productResponse.data[0] : productResponse.data;

if (!product) {
  return Astro.redirect('/productos');
}
---

<Layout title={`Editar Producto - ${product.name} - SoftControl CRM`}>
  <div class="container mx-auto px-4 py-8">
    <!-- Encabezado -->
    <div class="mb-8">
      <div class="flex items-center gap-2 text-sm text-gray-600 mb-4">
        <a href="/productos" class="hover:text-blue-600">Productos</a>
        <span>/</span>
        <a href={`/productos/${id}`} class="hover:text-blue-600">{product.name}</a>
        <span>/</span>
        <span>Editar</span>
      </div>
      <h1 class="text-3xl font-bold text-gray-900">Editar Producto</h1>
      <p class="text-gray-600 mt-2">Modifica la información del producto o servicio</p>
    </div>

    <!-- Formulario -->
    <div class="bg-white rounded-lg shadow-md p-6">
      <form id="editProductForm" class="space-y-6">
        <input type="hidden" id="productId" value={id} />
        
        <!-- Información básica -->
        <div>
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Información Básica</h3>
          <div class="grid grid-cols-1 gap-6">
            <!-- Nombre -->
            <div>
              <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
                Nombre del producto <span class="text-red-500">*</span>
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                value={product.name}
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                placeholder="Ej: Software Contable Pro"
              />
            </div>

            <!-- Descripción -->
            <div>
              <label for="description" class="block text-sm font-medium text-gray-700 mb-2">
                Descripción
              </label>
              <textarea
                id="description"
                name="description"
                rows="4"
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                placeholder="Describe las características principales del producto..."
              >{product.description || ''}</textarea>
            </div>
          </div>
        </div>

        <!-- Precios -->
        <div>
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Configuración de Precios</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Precio de pago único -->
            <div>
              <label for="price_one_payment" class="block text-sm font-medium text-gray-700 mb-2">
                Precio de pago único
              </label>
              <div class="relative">
                <span class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-500">$</span>
                <input
                  type="number"
                  id="price_one_payment"
                  name="price_one_payment"
                  min="0"
                  step="0.01"
                  value={product.price_one_payment || ''}
                  class="w-full pl-8 pr-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                  placeholder="0.00"
                />
              </div>
              <p class="mt-1 text-sm text-gray-500">
                Para licencias de compra única
              </p>
            </div>

            <!-- Precio de suscripción -->
            <div>
              <label for="price_subscription" class="block text-sm font-medium text-gray-700 mb-2">
                Precio de suscripción mensual
              </label>
              <div class="relative">
                <span class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-500">$</span>
                <input
                  type="number"
                  id="price_subscription"
                  name="price_subscription"
                  min="0"
                  step="0.01"
                  value={product.price_subscription || ''}
                  class="w-full pl-8 pr-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                  placeholder="0.00"
                />
              </div>
              <p class="mt-1 text-sm text-gray-500">
                Para suscripciones mensuales o anuales
              </p>
            </div>
          </div>

          <div class="mt-4 bg-blue-50 border border-blue-200 rounded-md p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-blue-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3 flex-1 text-sm text-blue-700">
                <p>
                  Puedes configurar uno o ambos precios. Si solo configuras un tipo de precio, 
                  el producto solo estará disponible para ese tipo de licencia.
                </p>
              </div>
            </div>
          </div>
        </div>

        <!-- Botones -->
        <div class="flex justify-end gap-4 pt-4 border-t">
          <a href={`/productos/${id}`} class="px-6 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50">
            Cancelar
          </a>
          <button
            type="submit"
            class="px-6 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
          >
            Guardar Cambios
          </button>
        </div>
      </form>
    </div>
  </div>

  <!-- Mensaje de éxito -->
  <div id="successMessage" class="hidden fixed top-4 right-4 bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded z-50" role="alert">
    <span class="block sm:inline">Producto actualizado exitosamente</span>
  </div>

  <!-- Mensaje de error -->
  <div id="errorMessage" class="hidden fixed top-4 right-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded z-50" role="alert">
    <span class="block sm:inline" id="errorText">Error al actualizar el producto</span>
  </div>

  <script>
    import { updateProduct } from '../../../lib/services/productsService';

    const form = document.getElementById('editProductForm');
    const successMessage = document.getElementById('successMessage');
    const errorMessage = document.getElementById('errorMessage');
    const errorText = document.getElementById('errorText');
    const productIdInput = document.getElementById('productId') as HTMLInputElement;

    form?.addEventListener('submit', async (e) => {
      e.preventDefault();

      const productId = productIdInput?.value;
      if (!productId) return;

      const formData = new FormData(form as HTMLFormElement);
      const priceOnePayment = formData.get('price_one_payment');
      const priceSubscription = formData.get('price_subscription');

      // Validar que al menos un precio esté definido
      if (!priceOnePayment && !priceSubscription) {
        if (errorText) {
          errorText.textContent = 'Debes especificar al menos un precio para el producto';
        }
        errorMessage?.classList.remove('hidden');
        setTimeout(() => {
          errorMessage?.classList.add('hidden');
        }, 5000);
        return;
      }

      const productData = {
        name: formData.get('name') as string,
        description: (formData.get('description') as string) || undefined,
        price_one_payment: priceOnePayment ? parseFloat(priceOnePayment as string) : undefined,
        price_subscription: priceSubscription ? parseFloat(priceSubscription as string) : undefined,
      };

      try {
        const response = await updateProduct(productId, productData);
        
        if (response.success) {
          successMessage?.classList.remove('hidden');
          setTimeout(() => {
            window.location.href = `/productos/${productId}`;
          }, 2000);
        } else {
          if (errorText) {
            errorText.textContent = response.error || 'Error al actualizar el producto';
          }
          errorMessage?.classList.remove('hidden');
          setTimeout(() => {
            errorMessage?.classList.add('hidden');
          }, 5000);
        }
      } catch (error) {
        if (errorText) {
          errorText.textContent = 'Error inesperado al actualizar el producto';
        }
        errorMessage?.classList.remove('hidden');
        setTimeout(() => {
          errorMessage?.classList.add('hidden');
        }, 5000);
      }
    });
  </script>
</Layout>

